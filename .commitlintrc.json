{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "perf",
        "ci",
        "build",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "auth",
        "admin",
        "dosen",
        "mahasiswa",
        "laboran",
        "kuis",
        "booking",
        "pwa",
        "ui",
        "api",
        "db",
        "test",
        "config"
      ]
    ]
  }
}
